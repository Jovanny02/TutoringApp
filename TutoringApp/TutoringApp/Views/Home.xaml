<?xml version="1.0" encoding="utf-8" ?>
<d:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="clr-namespace:TutoringApp.Views;assembly=TutoringApp.Views"
             xmlns:c="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="c"
             x:Class="TutoringApp.Views.Home">
    <ContentPage.Content>
        <StackLayout BackgroundColor="{StaticResource DefaultWhite}" VerticalOptions="FillAndExpand">
            
            <StackLayout>
                <Frame Style="{StaticResource BorderStyle}">
                    <Frame Style="{StaticResource InternalViewStyle}">
                        <SearchBar Placeholder="Search For a Topic or Tutor" 
                        x:Name="searchBar"
                        SearchCommand="{Binding PerformSearch}"
                        SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"
                        HorizontalTextAlignment="center"
                        VerticalOptions="Start" 
                        HorizontalOptions="Fill"
                        PlaceholderColor="{DynamicResource DefaultBlack}"
                        />
                    </Frame>
                </Frame>
         </StackLayout>

            <Image Source="alligator.png" Margin="40,0,40,0"/>


            <StackLayout VerticalOptions="EndAndExpand">
            <Label Text="Sign Up or Login" 
                HorizontalOptions="CenterAndExpand"
                TextColor="{StaticResource DefaultBlack}"
                FontSize="30"
                FontAttributes="Bold"/>
            
            
            <!-- ADD click handlers-->
            <Button Text="Sign up as a tutor or student" Style="{StaticResource HomeButtonStyle}" Margin="25,20,25,20"  />

            <Button Text="Login" Style="{StaticResource HomeButtonStyle}" Margin="25,0,25,50" />

            </StackLayout>


        </StackLayout>

    </ContentPage.Content>

</d:BaseContentPage>

