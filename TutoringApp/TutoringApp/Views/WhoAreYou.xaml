<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TutoringApp.Views.WhoAreYou"
             Padding="10">
    <AbsoluteLayout>
        <Label Text=" Are you?"
                  TextColor="Black"
                  FontAttributes="Bold"
                  FontSize="40"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Center"
            AbsoluteLayout.LayoutBounds="0.5,0.1,100,100" AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Image Source ="who.png" AbsoluteLayout.LayoutBounds="0.5,0.5,100,100" AbsoluteLayout.LayoutFlags="PositionProportional"  />
        <Button Text="A student" TextColor="White" Style="{StaticResource HomeButtonStyle2}" AbsoluteLayout.LayoutBounds="0,0.6,1,50" AbsoluteLayout.LayoutFlags="WidthProportional, PositionProportional"
                Command="{Binding SignupTutorCommand}"/>
        <Button Text="A Tutor"  TextColor="white" Style="{StaticResource HomeButtonStyle2}" AbsoluteLayout.LayoutBounds="0,0.70,1,50" AbsoluteLayout.LayoutFlags="WidthProportional,PositionProportional"
                Command="{Binding SignupTutorCommand}"/>

    </AbsoluteLayout>
        
    
</ContentPage>